#!/bin/sh /etc/rc.common
# Init скрипт для автозапуска Wi-Fi сканера на OpenWrt
# Скопируйте этот файл в /etc/init.d/scanner на роутере

START=99
USE_PROCD=1

start_service() {
    procd_open_instance
    procd_set_param command /usr/bin/scanner.sh
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop_service() {
    killall scanner.sh 2>/dev/null
}
